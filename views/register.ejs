<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <title>Register</title>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">

  <!-- Main Container -->
  <div class="relative">
    <!-- Registration Form Container -->
    <div class="bg-white p-6 sm:p-3 rounded mx-3 my-1 shadow-md md:p-6 lg:p-6 rounded-xl w-18 md:w-80 lg:w-96 sm:mt-6 md:mt-1 lg:mt-1 opacity-0 transition-opacity duration-1000">
      <h1 class="text-4xl text-gray-800 justify-center flex items-center font-bold mb-4 opacity-0 transform translate-x-[-2rem] delay-300">
        Register
      </h1>

      <form action="/register" method="POST">
        <div class="mb-4 opacity-0 transform translate-x-[2rem] delay-500">
          <label for="name" class="block text-gray-600">Name</label>
          <input type="text" id="name" name="name" required
                 class="mt-1 p-2 w-full border rounded-md">
        </div>
        <div class="mb-4 opacity-0 transform translate-x-[-2rem] delay-700">
          <label for="email" class="block text-gray-600">Email</label>
          <input type="email" id="email" name="email" required
                 class="mt-1 p-2 w-full border rounded-md">
        </div>
        <div class="mb-4 opacity-0 transform translate-x-[2rem] delay-1000">
          <label for="password" class="block text-gray-600">Password</label>
          <input type="password" id="password" name="password" required
                 class="mt-1 p-2 w-full border rounded-md">
        </div>

        <button type="submit" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 opacity-0 transform translate-x-[-2rem] delay-1200">
          Register
        </button>
      </form>

      <p class="mt-4 text-gray-600 opacity-0 transform translate-x-[2rem] delay-1500">
        Already Registered? Go To 
        <a href="/login" class="text-blue-500 hover:underline">Login</a> Page
      </p>  
    </div>
  </div>

  <script>
    window.onload = function() {
      const elements = document.querySelectorAll('.opacity-0');
      elements.forEach(element => element.classList.remove('opacity-0', 'translate-x-[-2rem]', 'translate-x-[2rem]'));

      // Simulate successful registration after a delay
      setTimeout(() => {
        const successMessage = document.getElementById('successMessage');
        successMessage.classList.remove('hidden', 'translate-y-full', 'opacity-0');
      }, 3000); // Adjust the delay as needed
    };
  </script>

</body>
</html>
